
<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between">
      <a href="/post/{{id}}" class="font-weight-bold text-dark">{{title}}</a>
      <p>posted by {{user.name}} on {{format_date createdAt}}</p>
    </div>
  </div>
  <div class="card-body">
    <p class="card-text">{{content}}</p>
  </div>
</div>
